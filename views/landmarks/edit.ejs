<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit &quot;<%= landmark.name %>&quot;</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/landmarks/<%= landmark._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="landmark[name]" value="<%= landmark.name %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="landmark[price]" placeholder="<%= landmark.price %>" min="0.01" step="0.01"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="landmark[image]" value="<%= landmark.image %>"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="landmark[description]" value="<%= landmark.description %>"></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/landmarks">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>